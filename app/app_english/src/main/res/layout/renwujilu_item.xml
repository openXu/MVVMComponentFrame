<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/rootView"
    android:clipToPadding="true"
	android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/open_jilu_list_itembg" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_fuxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/pf1_btn_selector"
            android:clickable="true"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip"
            android:text="去复习"
            android:textColor="#ff0000"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_item_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_toLeftOf="@+id/tv_fuxi"
            android:text="2014.1.2 背词3oo个"
            android:textColor="@color/color_black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_num"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="17dip"
            android:layout_toLeftOf="@+id/tv_fuxi"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/pufa_item_time"
                android:layout_width="13dip"
                android:layout_height="13dip"
                android:scaleType="centerInside"
                android:src="@drawable/open_jilu_icon_time" />

            <TextView
                android:id="@+id/tv_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:text="2014.07.14"
                android:textColor="@color/color_black"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>