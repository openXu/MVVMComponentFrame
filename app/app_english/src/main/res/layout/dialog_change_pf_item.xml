<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   
    android:layout_width="match_parent"
    android:layout_height="@dimen/pf_item_size"
    android:background="@color/bg_gray"
    android:gravity="center_vertical"
    android:orientation="vertical" >
    <LinearLayout
         android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pf_item_size"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:background="@drawable/open_hf_check_selector"
            android:clickable="false"
            android:layout_marginLeft="20dip" />

        <RelativeLayout
            android:layout_width="@dimen/pf_k_1"
            android:layout_height="@dimen/pf_k_1"
            android:layout_marginLeft="10dip"
            android:background="@drawable/open_shape_dialog_pf"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_color"
                android:layout_width="@dimen/pf_k_2"
                android:layout_height="@dimen/pf_k_2"
                android:layout_centerInParent="true"
                android:src="@color/pf1_title_bg" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="红色"
            android:textColor="@color/text_color_gay"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_line2"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_above="@+id/tv_ok"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:src="@color/sub_line" />
</LinearLayout>