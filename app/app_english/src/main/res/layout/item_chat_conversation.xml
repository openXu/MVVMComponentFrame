<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dip" >

        <ImageView
            android:id="@+id/iv_recent_avatar"
            android:layout_width="@dimen/icon_user"
            android:layout_height="@dimen/icon_user"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/open_user_icon_def" />

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/ll_2"
            android:layout_toRightOf="@+id/iv_recent_avatar"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_recent_name"
                style="@style/Smile.TextView._Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left|center"
                android:singleLine="true"
                android:textSize="@dimen/text_size_16"
                android:text="adsfasdfasdf"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/tv_recent_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_marginTop="6dip"
                android:singleLine="true"
                android:text="adsfasdfasdf"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:gravity="center_vertical|right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_recent_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="adsfasdfasdf"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_recent_unread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="15dip"
                android:minHeight="15dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/chat_session_newnum_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffffffff"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7px"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_alignParentBottom="true"
        android:background="@color/sub_line" >
    </View>

</LinearLayout>