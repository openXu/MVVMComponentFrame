<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:src="#d3d7d4" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pf1_item_selector"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="15dip" >

            <TextView
                android:id="@+id/tv_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="english"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_english"
                android:layout_marginTop="5dip"
                android:textStyle="italic"
                android:singleLine="true"
                android:text="/en g‘dd/"
                android:textColor="@color/text_color_gay"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/open_renwu_say_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip">

            <TextView
                android:id="@+id/tv_china"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ll_remenber"
                android:layout_marginLeft="5dip"
                android:text="n.水果"
                android:textColor="@color/text_color_gay"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/ll_remenber"
                android:layout_width="100dip"
                android:layout_height="35dip"
                android:layout_alignParentRight="true"
                android:background="@drawable/pf1_btn_selector"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_remenber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/open_renwu_icon_jzl" />

                <TextView
                    android:id="@+id/tv_remenber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="记住了"
                    android:textColor="#ff0000"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>