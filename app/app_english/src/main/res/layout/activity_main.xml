<com.openxu.view.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:openxu="http://schemas.android.com/apk/res/com.openxu.english"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50dp" >

        <RelativeLayout
            android:id="@+id/rl_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:paddingBottom="20dip"
            android:paddingTop="20dip" >

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/open_user_icon_def" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dip"
                android:layout_toRightOf="@+id/iv_icon"
                android:text="登录/注册"
                android:textSize="@dimen/text_size_18" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/line_login"
            android:layout_width="fill_parent"
            android:layout_height="0.5sp"
            android:layout_below="@+id/rl_login"
            android:layout_marginRight="30dip"
            android:src="#f6f5ec" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_bottom"
            android:layout_below="@+id/line_login"
            android:layout_marginTop="30dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_bdc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingBottom="12dip"
                    android:paddingTop="12dip" >

                    <ImageView
                        android:id="@+id/ic_bs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dip"
                        android:layout_alignBottom="@+id/tv_menu_bdc"
                        android:src="@drawable/open_main_menu_bdc" />

                    <TextView
                        android:id="@+id/tv_menu_bdc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@+id/ic_bs"
                        android:text="正在背诵"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tv_lable_bdc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_menu_bdc"
                        android:layout_alignLeft="@+id/tv_menu_bdc"
                        android:layout_marginTop="3dip"
                        android:text="(高中词汇精选)"
                        android:textSize="@dimen/text_size_13"
                        android:textStyle="italic" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_book"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="12dip"
                    android:paddingTop="12dip" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dip"
                        android:src="@drawable/open_main_menu_book" />

                    <TextView
                        android:id="@+id/tv_menu_book"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="我的词书"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_dcb"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="12dip"
                    android:paddingTop="12dip" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dip"
                        android:src="@drawable/open_main_menu_dcb" />

                    <TextView
                        android:id="@+id/tv_menu_dcb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="单词本"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_hf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="12dip"
                    android:paddingTop="12dip" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dip"
                        android:src="@drawable/open_main_menu_hf" />

                    <TextView
                        android:id="@+id/tv_menu_hf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="皮肤"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_recent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="12dip"
                    android:paddingTop="12dip" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dip"
                        android:src="@drawable/open_main_menu_fx" />

                    <TextView
                        android:id="@+id/tv_menu_recent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="圈子"
                        android:textSize="@dimen/text_size_16" />

                    <ImageView
                        android:id="@+id/iv_recent_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/msg_tips"
                        android:gravity="center"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_set"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="12dip"
                    android:paddingTop="12dip" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dip"
                        android:src="@drawable/open_main_menu_setting" />

                    <TextView
                        android:id="@+id/tv_menu_set"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="设置"
                        android:textSize="@dimen/text_size_16" />

                    <ImageView
                        android:id="@+id/iv_set_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/msg_tips"
                        android:gravity="center"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <!-- 推荐  和  积分 -->

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_menu_faxian"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="30dip"
                android:paddingRight="15dip"
                android:text="推荐"
                android:textSize="@dimen/text_size_16"
                android:textStyle="italic" />

            <ImageView
                android:layout_width="1sp"
                android:layout_height="20dip"
                android:src="#55ffffff" />

            <TextView
                android:id="@+id/tv_menu_jifen"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="15dip"
                android:paddingRight="30dip"
                android:text="积分"
                android:textSize="@dimen/text_size_16"
                android:textStyle="italic" />
        </LinearLayout>
    </RelativeLayout>

    <com.openxu.english.view.draglayout.MyRelativeLayout
        android:id="@+id/my_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#00000000" />

        <com.openxu.english.view.MainTitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#33000000" />
    </com.openxu.english.view.draglayout.MyRelativeLayout>

</com.openxu.view.DragLayout>