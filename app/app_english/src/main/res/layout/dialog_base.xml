<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_base_bg"
    android:minWidth="300dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dialog_titleicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/add_avator"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/dialog_title"
            style="@style/Smile.TextView._Orange"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/tips" />
    </LinearLayout>

    <View
        android:id="@+id/line_1"
        android:layout_width="fill_parent"
        android:layout_height="0.7sp"
        android:background="@color/sub_line" />

    <LinearLayout
        android:id="@+id/dialog_contentPanel"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/dialog_message"
            style="@style/Smile.TextView._Black"
            android:layout_width="match_parent"
            android:gravity="left|center"
            android:lineSpacingMultiplier="1.2" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7sp"
        android:background="@color/sub_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1sp"
            android:layout_marginTop="1sp"
            android:layout_marginBottom="1sp"
            android:layout_marginRight="0.5sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            android:layout_width="0.7sp"
            android:layout_height="match_parent"
            android:src="@color/sub_line" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="0.5sp"
            android:layout_marginTop="1sp"
            android:layout_marginBottom="1sp"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="去广告"
            android:textColor="#009ACD"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

</LinearLayout>