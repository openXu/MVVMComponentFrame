<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:id="@+id/rl_title">
    <LinearLayout 
        android:id="@+id/ll_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_hight"
        android:layout_below="@+id/ll_top">

        <LinearLayout
            android:id="@+id/ll_title_back"
            android:layout_width="@dimen/title_hight"
            android:layout_height="@dimen/title_hight"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_title_back"
                android:layout_width="@dimen/title_icon_size"
                android:layout_height="@dimen/title_icon_size"
                android:scaleType="fitXY"
                android:src="@drawable/open_title_back" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_title_text"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_hight"
            android:layout_toLeftOf="@+id/ll_title_menu"
            android:layout_toRightOf="@+id/ll_title_back"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_danci"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:scaleType="matrix"
                android:text="单词"
                android:textSize="@dimen/title_text" />

            <TextView
                android:id="@+id/tv_chaxun"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:clickable="true"
                android:gravity="center"
                android:text="查询"
                android:textSize="@dimen/title_text" />

            <TextView
                android:id="@+id/tv_fanyi"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:clickable="true"
                android:gravity="center"
                android:text="翻译"
                android:textSize="@dimen/title_text" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_title_menu"
            android:layout_width="@dimen/title_hight"
            android:layout_height="@dimen/title_hight"
            android:layout_alignParentRight="true"
            android:background="#00000000" >
        </RelativeLayout>

        <ImageView
            android:id="@+id/ll_title_bar"
            android:layout_width="60dip"
            android:layout_height="3sp"
            android:layout_alignParentBottom="true"
            android:background="#000000" />
    </RelativeLayout>

</RelativeLayout>