<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pf2_login_bg"
        android:orientation="vertical"
        android:padding="10dip" >
        <!-- 全局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:background="@drawable/pf2_item_selector"
                android:gravity="center"
                android:text="全局listViewItem点击色" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:background="@drawable/pf2_btn_selector"
                android:gravity="center"
                android:text="全局按钮背景" />
        </LinearLayout>
        
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginTop="5dip"
            android:src="@color/pf2_regist_line_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
    			android:textColor="@color/pf2_login_btn_text"            
                android:gravity="center"
                android:text="登录按钮字色" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:background="@drawable/pf2_regist_btn_selector"
                android:gravity="center"
                android:text="注册按钮" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:background="@drawable/pf2_main_item_bg"
                android:gravity="center"
                android:text="主界面item" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_weight="1"
                android:background="@color/pf2_title_bg"
                android:gravity="center"
                android:textColor="@color/pf2_main_title_text_color"
                android:text="主界面bar未选中" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="侧滑菜单背景" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_weight="2"
                android:background="@color/pf2_title_bg"
                android:gravity="center"
                android:text="标题item" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_weight="2"
                android:background="@color/pf2_title_item_bg"
                android:gravity="center"
                android:text="标题item按下" />
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:background="@color/pf2_round_color"
                android:gravity="center"
                android:text="圆圈进度色" />
        </LinearLayout>
        
                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:background="@color/pf2_ad_bg"
                android:textColor="@color/pf2_ad_text_color"
                android:gravity="center"
                android:text="广告" />
        </LinearLayout>
        
    </LinearLayout>

</ScrollView>