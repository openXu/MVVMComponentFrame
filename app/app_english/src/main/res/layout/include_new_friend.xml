<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/layout_new"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dip" >

        <FrameLayout
            android:id="@+id/frame_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_msg_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:contentDescription="@string/action_settings"
                android:src="@drawable/msg_tips" />

            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:contentDescription="@string/action_settings"
                android:padding="5dip"
                android:src="@drawable/new_friends_icon" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_new_name"
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:textColor="#aa000000"
            android:singleLine="true"
            android:text="@string/new_friends"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="25dip"
        android:layout_below="@id/layout_new"
        android:background="@color/sub_line" >
    </View>

    <LinearLayout
        android:id="@+id/layout_near"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_below="@id/line"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dip" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:contentDescription="@string/action_settings"
                android:src="@drawable/msg_tips"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:contentDescription="@string/action_settings"
                android:padding="5dip"
                android:src="@drawable/icon_near" />
        </FrameLayout>

        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#aa000000"
            android:layout_marginLeft="10dip"
            android:singleLine="true"
            android:text="@string/near_people"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>