<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/core_shape_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="title"
        android:textColor="@color/color_red"
        android:textSize="@dimen/text_size_level_def" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/tv_message"
            style="@style/text_style_def"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dip"
            android:singleLine="false"
            android:text="message" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_btn_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_btn_content_height"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/dialog_btn_width"
            android:layout_height="@dimen/dialog_btn_height"
            android:background="@drawable/core_shape_btn_gray"
            android:gravity="center"
            android:text="cancel"
            android:textColor="@color/text_color_light_gray"
            android:textSize="@dimen/text_size_level_mid" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="@dimen/dialog_btn_width"
            android:layout_height="@dimen/dialog_btn_height"
            android:layout_marginLeft="30dip"
            android:background="@drawable/core_shape_btn_red"
            android:gravity="center"
            android:text="ok"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_level_mid" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_btn_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_btn_content_height"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_btn_one"
            android:layout_width="@dimen/dialog_btn_width"
            android:layout_height="@dimen/dialog_btn_height"
            android:background="@drawable/core_shape_btn_red"
            android:gravity="center"
            android:text="one"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_level_mid" />
    </LinearLayout>


</LinearLayout>